<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_white"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_10sdp"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/dVerify_tvReason_label"
                    style="@style/textview_12_bold_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:text="Preferences"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />

                <ImageView
                    android:id="@+id/imgv_dialog_close"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/ic_close_circle_black"
                    android:visibility="visible" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvModeLBL"
                    style="@style/textview_14_medium_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Mode:"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/flGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.herride.customer.ui.widgets.NDSpinner
                            android:id="@+id/spinnerMode"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:digits="@string/digit_mobile"
                            android:enabled="true"
                            android:hint="None"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:src="@drawable/ic_down_arrow_black" />

                        <TextView
                            android:id="@+id/tvModeItem"
                            style="@style/textview_14_regular_black"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="start|center_vertical"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="None"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/gray_text_dark" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="20"
                        android:background="@color/gray" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvTemperatureLBL"
                    style="@style/textview_14_medium_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Temperature:"
                    android:textColor="@color/black" />

                <!--
                                    style="@android:style/Widget.Material.SeekBar.Discrete"-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/bg_temperature_gradient" />

                    <SeekBar
                        android:id="@+id/seeknarTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:max="100"
                        android:min="0"
                        android:progress="20"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:splitTrack="true"
                        android:background="@color/transparent"
                        android:progressTint="@color/transparent"
                        android:thumb="@drawable/seekbar_thumb"
                        tools:ignore="NewApi" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvTempLow"
                                style="@style/textview_14_regular_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="0"
                                android:textColor="@color/end_colorcc23cf"
                                android:textSize="@dimen/_10ssp" />


                            <TextView
                                android:id="@+id/tvTempHigh"
                                style="@style/textview_14_regular_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="100"
                                android:textColor="@color/start_color5a0c65"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/_2sdp">


                            <ImageView
                                android:id="@+id/imgvTempHigh"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="end"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_temperature_low"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/imgvTempLow"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_temperature_hign"
                                android:visibility="visible" />


                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTemperatureCount"
                        style="@style/textview_14_medium_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_18sdp" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMusicLBL"
                    style="@style/textview_14_medium_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="Music:"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/flMusic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.herride.customer.ui.widgets.NDSpinner
                            android:id="@+id/spinnerMusic"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:digits="@string/digit_mobile"
                            android:enabled="true"
                            android:hint="None"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:src="@drawable/ic_down_arrow_black" />

                        <TextView
                            android:id="@+id/tvMusicItem"
                            style="@style/textview_14_regular_black"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="start|center_vertical"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="None"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/gray_text_dark" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="20"
                        android:background="@color/gray" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAccessible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAccessibleLBL"
                    style="@style/textview_14_medium_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Accessible:"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/flAccessible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.herride.customer.ui.widgets.NDSpinner
                            android:id="@+id/spinnerAccessible"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:digits="@string/digit_mobile"
                            android:enabled="true"
                            android:hint="None"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:src="@drawable/ic_down_arrow_black" />

                        <TextView
                            android:id="@+id/tvAccessibleItem"
                            style="@style/textview_14_regular_black"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="start|center_vertical"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="None"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/gray_text_dark" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="20"
                        android:background="@color/gray" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/dVerify_btnSubmit"
                style="@style/textview_14_medium_black"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/bg_button_gradient"
                android:gravity="center"
                android:paddingStart="@dimen/_23sdp"
                android:paddingEnd="@dimen/_23sdp"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:visibility="visible" />
            <!--
              <Button
                  android:id="@+id/dVerify_btnSubmit"
                  style="@style/regularBlackText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/btn_color_primary_solid"
                  android:layout_margin="@dimen/_20sdp"
                  android:text="Submit" />
  -->
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>