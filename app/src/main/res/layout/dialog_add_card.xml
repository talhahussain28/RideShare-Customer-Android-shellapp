             </LinearLayout>-->

            <LinearLayout
                android:id="@+id/ll_credit_number_main_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/card_list_bg_rounded"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgv_CreditCard"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_card_type_3"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgClose"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_close_black"
                        android:visibility="gone" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp">

                    <LinearLayout
                        android:id="@+id/ll_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgCardType"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_mastercard"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/edt_first_card_number"
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="start|center_vertical"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black_lite"
                            android:textColorHint="@color/black_lite"
                            android:textSize="@dimen/_12ssp" />

                        <EditText

                            android:id="@+id/edt_second_card_number"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="start|center_vertical"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black_lite"
                            android:textColorHint="@color/black_lite"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/edt_third_card_number"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="start|center_vertical"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/black_lite"
                            android:textColorHint="@color/black_lite"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/edt_four_card_number"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="start|center_vertical"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingStart="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black_lite"
                            android:textColorHint="@color/black_lite"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_card_number_txt_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:text="Card Number"
                        android:textColor="@color/black_lite"
                        android:textSize="@dimen/_12ssp" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/card_list_bg_rounded"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imgvCardHolderName"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/ic_full_name"
                    android:tint="@color/gray_card_border"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edtCardHolderName"
                    style="@style/textview_12_regular_black"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/imgv_CreditCard"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:enabled="true"
                    android:hint="Card Holder Name"
                    android:inputType="text"
                    android:paddingStart="@dimen/_2sdp"
                    android:singleLine="true"
                    android:textColor="@color/black_lite"
                    android:textColorHint="@color/black_lite" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">


                <EditText
                    android:id="@+id/edtCardExpDate"
                    style="@style/textview_12_regular_black"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/imgv_CreditCard"
                    android:background="@drawable/card_list_bg_rounded"
                    android:digits="1234567890/"
                    android:enabled="true"
                    android:hint="Exp. Date"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:singleLine="true"
                    android:textColor="@color/black_lite"
                    android:textColorHint="@color/black_lite" />


                <EditText
                    android:id="@+id/edtCardCVVNumber"
                    style="@style/textview_12_regular_black"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_toRightOf="@+id/imgv_CreditCard"
                    android:background="@drawable/card_list_bg_rounded"
                    android:digits="@string/digit_numbers"
                    android:enabled="true"
                    android:hint="CVV"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:singleLine="true"
                    android:textColor="@color/black_lite"
                    android:textColorHint="@color/black_lite" />

            </LinearLayout>

            <TextView
                android:id="@+id/dVerify_btnSubmit"
                style="@style/textview_14_medium_black"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="bottom|center"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/bg_button_gradient"
                android:gravity="center"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:text="Add"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:visibility="visible" />
            <!--
              <Button
                  android:id="@+id/dVerify_btnSubmit"
                  style="@style/regularBlackText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/btn_color_primary_solid"
                  android:layout_margin="@dimen/_20sdp"
                  android:text="Submit" />
  -->
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>