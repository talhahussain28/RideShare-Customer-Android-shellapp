<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_setting_black"
            android:tint="@color/grey999999"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgvUserProfileHome"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:onClick="clickNavigation"
                android:src="@drawable/ic_profile_place_holder"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_setting_black"
                android:tint="@color/pinkC522C9"
                android:visibility="invisible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvUserNameHome"
            style="@style/textview_12_medium_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="left|center"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            tools:text="Customer Name" />

        <TextView
            android:id="@+id/tvOrderNow"
            style="@style/textview_12_regular_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_rounded_pink_border"
            android:gravity="left|center"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Order Now"
            android:textColor="@color/order_now_color"
            android:textSize="@dimen/_11ssp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/navDashBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgDashBoard"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_map"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvDashBoard"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Map"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navTrips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgTrips"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_trips"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvTrips"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="My Trips"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navRateTheRide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgRateTheRide"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_become_driver_car"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvRateTheRide"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Rate The Ride"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navPaymentSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgPaymentSetting"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_payment"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvPaymentSetting"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Payment Settings"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgSetting"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_setting_black"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvSetting"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Settings"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/navSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgSupport"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_support"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvSupport"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Support"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navFaq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgFaq"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_faq"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvFaq"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="FAQ"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navBecomeADriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgBecomeADriver"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_car_pink"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvBecomeADriver"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Become A Driver"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/navLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5ssp"
                    android:gravity="left|center"
                    android:onClick="clickNavigation"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLogout"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvLogout"
                        style="@style/textview_12_regular_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="left|center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Logout"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>