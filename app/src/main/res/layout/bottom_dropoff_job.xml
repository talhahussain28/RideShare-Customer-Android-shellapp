<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_dropoff_job"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_curve_white_solid"
    android:clickable="false"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="gone"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_16sdp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgDriverProfile"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_profile_place_holder" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDriverName"
                style="@style/textview_14_bold_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Connar Chavez"
                android:textColor="@color/black" />

            <!--<RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:numStars="5"
                android:padding="@dimen/_2sdp"
                android:progressTint="@color/pinkC522C9"
                android:rating="4" />-->
            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBarStarted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:rating="0"
                app:srb_rating="0"
                app:srb_clearRatingEnabled="true"
                app:srb_clickable="false"
                app:srb_starHeight="@dimen/_20sdp"
                app:srb_starWidth="@dimen/_20sdp"
                app:srb_drawableEmpty="@drawable/ic_car_gray"
                app:srb_drawableFilled="@drawable/ic_car_pink"
                app:srb_isIndicator="true"
                app:srb_numStars="5"
                app:srb_scrollable="true"
                app:srb_starPadding="@dimen/_2sdp"
                app:srb_stepSize="0.1"/>

<!--
                android:layoutDirection="ltr"
                android:rating="4"
                app:srb_rating="4"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHeaderVehicleNumber"
                    style="@style/textview_12_medium_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="ST37EA51"
                    android:visibility="gone"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvHeaderVehicleModel"
                    style="@style/textview_12_medium_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Small Car"
                    android:visibility="gone"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShareETA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/bg_rounded_pink_border"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp">


        <ImageView
            android:id="@+id/imgShareETA"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_share_pink"
            app:tint="@color/pinkC522C9" />

        <TextView
            android:id="@+id/tvShareETALBL"
            style="@style/textview_12_medium_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:text="Share ETA"
            android:textColor="@color/pinkC522C9" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVehicleNumberLBL"
            style="@style/textview_12_medium_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Vehicle Number"
            android:textFontWeight="1" />


        <TextView
            android:id="@+id/tvOrderIDLBL"
            style="@style/textview_12_medium_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Booking ID" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVehicleNumber"
            style="@style/textview_14_bold_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="ST3752"
            android:textColor="@color/black"
            android:textFontWeight="1" />


        <TextView
            android:id="@+id/tvOrderID"
            style="@style/textview_14_bold_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="#2564"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/tvDROPOFFLBL"
            style="@style/textview_14_bold_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="DROPOFF"
            android:textFontWeight="1"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvDropOffAddress"
        style="@style/textview_12_medium_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/bg_litest_rounded_gray"
        android:gravity="start"
        android:padding="@dimen/_5sdp"
        android:text="129 ANDERSON ST.23TH WAST STREET FRESH MEADOWS, NY 11365"
        android:textFontWeight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDistanceLBL"
            style="@style/textview_12_medium_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Distance"
            android:textFontWeight="1" />


        <TextView
            android:id="@+id/tvESTLBL"
            style="@style/textview_12_medium_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Estimated Time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDistance"
            style="@style/textview_14_bold_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="5 Miles"
            android:textColor="@color/black"
            android:textFontWeight="1" />


        <TextView
            android:id="@+id/tvEST"
            style="@style/textview_14_bold_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="20 - 25 min"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp">

        <TextView
            android:id="@+id/tvTotalFareLBL"
            style="@style/textview_14_bold_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Total Far :"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tvTotalFare"
            style="@style/textview_14_bold_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:gravity="center"
            android:text="$25.36"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</LinearLayout>