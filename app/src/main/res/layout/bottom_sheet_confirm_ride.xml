<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_marginStart="21dp"
        android:text="Arriving"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginStart="21dp"
        android:text="8 min"
        android:layout_marginTop="8dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:layout_marginStart="21dp"
        android:text="Golf Buddies"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@+id/imageLayout"
        app:layout_constraintEnd_toStartOf="@+id/imageLayout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text4"
        android:layout_marginStart="21dp"
        android:text="AV 6081 BD"
        android:textColor="@color/black"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintEnd_toStartOf="@+id/imageLayout"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageLayout"
        android:layout_width="75dp"
        android:layout_height="69dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#EAFAFF"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:src="@drawable/car"
                tools:ignore="ImageContrastCheck" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/imageLayout"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageLayout2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#EAFAFF"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewUserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1.5dp"
                android:layout_marginTop="1.5dp"
                android:layout_marginEnd="1.5dp"
                android:layout_marginBottom="1.5dp"
                android:src="@drawable/boy"
                tools:ignore="ImageContrastCheck" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text5"
        android:layout_marginStart="21dp"
        android:text="Brad Smith"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/imageLayout2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="3dp"
        android:id="@+id/imageStar"
        android:src="@drawable/star"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintStart_toStartOf="@id/text5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="5.0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/text5"
        app:layout_constraintStart_toEndOf="@+id/imageStar"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageLayoutcall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewcall"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginStart="1.5dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="1.5dp"
                android:layout_marginBottom="1.5dp"
                android:src="@drawable/call"
                tools:ignore="ImageContrastCheck" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom|center"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>